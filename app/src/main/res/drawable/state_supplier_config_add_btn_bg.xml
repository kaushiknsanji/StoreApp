<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <padding android:bottom="2dp" android:left="16dp" android:right="16dp" android:top="2dp" />
            <solid android:color="#84ffff" />
            <stroke android:width="4dp" android:color="#40c4ff" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <padding android:bottom="2dp" android:left="16dp" android:right="16dp" android:top="2dp" />
            <gradient android:angle="90" android:endColor="#84ffff" android:startColor="#40c4ff" android:type="linear" />
            <stroke android:width="2dp" android:color="#40c4ff" />
        </shape>
    </item>
</selector>